    <div class="sidebar" id="sidebar">
        <!-- Bot√£o de toggle (c√≠rculo do topo) -->
        <button class="sidebar-btn toggle-btn" onclick="toggleSidebar()">
            <span class="btn-text">Menu</span>
        </button>

        <!-- Bot√µes do meio -->
        <button class="sidebar-btn menu-btn" onclick="handleClick('home')">
            üè†
            <span class="btn-text">In√≠cio</span>
        </button>

        <button class="sidebar-btn menu-btn" onclick="handleClick('search')">
            üîç
            <span class="btn-text">Pesquisar</span>
        </button>

        <button class="sidebar-btn menu-btn" onclick="handleClick('favorites')">
            ‚≠ê
            <span class="btn-text">Favoritos</span>
        </button>

        <button class="sidebar-btn menu-btn" onclick="handleClick('settings')">
            ‚öôÔ∏è
            <span class="btn-text">Configura√ß√µes</span>
        </button>

        <!-- Bot√£o de baixo -->
        <button class="sidebar-btn bottom-btn" onclick="handleClick('profile')">
            üë§
            <span class="btn-text">Perfil</span>
        </button>
